<!-- card_item.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="212dp"
    android:padding="7dp"
    android:background="#5A6978"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="1dp">

    <View
        android:id="@+id/bottomHalfBackground"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/photoImageView"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"/>

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:src="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoImageView"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/buildingNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:text="BuildingName"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildingNameTextView"
        android:text="DateAndTime"
        android:textSize="14sp"
        android:layout_marginTop="15dp" />


</RelativeLayout>