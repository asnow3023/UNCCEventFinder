<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <!-- Green Banner -->
    <RelativeLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_primary"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu and Map Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_menu_24"
                android:layout_marginEnd="10dp"
                android:contentDescription="Menu Navigation Button" />

            <!-- Navigation Button -->
            <ImageView
                android:id="@+id/mapButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_map_24"
                android:layout_marginEnd="10dp"
                android:contentDescription="Map Navigation Button" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Event Details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bannerLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="SubTitle"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/detailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Address/Location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/common_google_signin_btn_icon_dark"
                android:layout_gravity="end"
                android:contentDescription="Event Image" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle" >

        <Button
            android:id="@+id/interestButton"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:text="I'm interested"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/naviButton"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:text="Navigate To"
            android:layout_marginStart="10dp"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:padding="16dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout" >

        <TextView
            android:id="@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sep 29th, 10:30 Am - Oct 4th, 7PM"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/baseline_calendar_month_24" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timeLayout" >

        <LinearLayout
            android:id="@+id/eventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_border"
            android:padding="16dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLayout" >

            <TextView
                android:id="@+id/event_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Category"
                android:padding="4dp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/event_category_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridLayout>

            <TextView
                android:id="@+id/event_audience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audience"
                android:padding="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:padding="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:padding="8dp"
                android:text="event detail text"
                android:background="@drawable/layout_border" />

            <TextView
                android:id="@+id/event_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ friends are attending this event!"
                android:padding="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_interested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ friends are interested in this event"
                android:padding="4dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>