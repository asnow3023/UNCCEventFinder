<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <!-- Green Banner -->
    <RelativeLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_primary"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu and Map Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_menu_24"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/menu_navigation_button" />

            <!-- Navigation Button -->
            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_map_24"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/map_navigation_button" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/event_details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eventLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bannerLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/detailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="@string/event_image" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/eventLayout" >

        <Button
            android:id="@+id/interestButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/i_m_interested"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/navigationButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/navigate_to"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout" >

        <TextView
            android:id="@+id/calendarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:drawableLeftCompat="@drawable/baseline_calendar_month_24" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:padding="16dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/timeLayout" >

        <TextView
            android:id="@+id/event_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_category"
            android:padding="4dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/categoryButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:textSize= "11sp"
            android:gravity="start"/>
        <!--
        <TextView
            android:id="@+id/event_audience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audience"
            android:padding="4dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/audienceButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="left"/>
        -->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_description"
            android:padding="4dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/event_description">

            <TextView
                android:id="@+id/eventdescriptiontext"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/layout_border"
                android:padding="8dp"
                android:paddingTop="8dp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="1dp"
        android:gravity= "center"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/event_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently, _ people are interested this event!"
            android:padding="4dp"
            android:gravity= "center"
            android:background="@drawable/layout_border"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_ friends are attending this event"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_interested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_ friends are interested in this event"
            android:padding="4dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
